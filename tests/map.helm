import spring

entry
  var map = spring:strmapNew()
  var stdout = spring:stdout_file()

  spring:mapPut(map, "potato", "battery", spring:FREE_NONE)
  spring:mapPut(map, "honey", "poney", spring:FREE_NONE)
  spring:mapPut(map, "flare", "guaxxa", spring:FREE_NONE)
  spring:mapPut(map, "guagua", "lelzie", spring:FREE_NONE)

  var value data

  if spring:mapGet(map, "flare", ptr value)
    spring:puts(cast<ptr uint8>(value))
  /if

  var iter = spring:mapiterStart(map)
  var pair ptr spring:Pair

  var inside = false

  spring:fputs("Size: ", stdout)
  spring:printint(spring:mapLen(map))
  spring:puts(" ")

  spring:fputs("{ ", stdout)

  while (pair = spring:mapiterNext(iter)) != null

    if inside
      spring:fputs(", ", stdout)
    else
      inside = true
    /if

    spring:fputs(cast<ptr uint8>(pair'key), stdout)
    spring:fputs(" : ", stdout)
    spring:fputs(cast<ptr uint8>(pair'value), stdout)

    spring:pairFree(pair)
  /while

  spring:puts(" }")

  spring:mapiterFree(iter)
  spring:mapFree(map)
/entry
