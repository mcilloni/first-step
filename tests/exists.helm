import spring

entry
  mut error ptr spring:Error
  mut argv = spring:args()

  if argv'len != 1
    spring:failln("Wrong number of arguments, must be 1")
  /if

  mut f = spring:fileOpen(argv'args[0], ptr error)
  if error != null
    spring:err("Error: ")
    spring:failln(spring:errorMsg(error))
  /if

  spring:out(argv'args[0])
  spring:outln(" exists")

  spring:streamClose(f)

/entry

