import spring

entry
  var stdout spring:FILE = spring:stdout_file()
  var list = spring:listNew()

  var i uint8 = 0
  while i < 31
    spring:listAppendint(list, i)
    i++
  /while

  spring:fputs("list[] == ", stdout)

  spring:listPrint(list)

  var extract = spring:listExtract(list, 3, 11)

  spring:fputs("list[3:14] == ", stdout)
  spring:listPrint(extract)

  spring:fputs("list[] == ", stdout)
  spring:listPrint(list)

  spring:listFree(extract)

  extract = spring:listExtract(list, 12, -1)

  spring:fputs("list[12:] == ", stdout)
  spring:listPrint(extract)

  spring:listFree(extract)

  spring:fputs("list[] == ", stdout)
  spring:listPrint(list)

  spring:puts("list[3] <- 23")

  spring:listAddint(list, 3, 23)

  spring:fputs("list[] == ", stdout)
  spring:listPrint(list)

  spring:listFree(list)
/entry

